  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="/assets/favicon.png">

  <%= javascript_pack_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>

<div class="section header">
  <div class="container">
    <div class="row">
      <div class="one-half column logo">
        <a href="/"><img class="u-max-full-width logo-sr" src="/assets/smartroute.png"></a>
      </div>
      <div class="one-half column">
        <a class="button button-primary button-fav" href="/favorites">Favorites</a>
        <a class="button button-primary" href="/agencies">Departures</a>
